#organising******************************************
main=Tk()
main.title('B2s Twitter Project')
topFrame = Frame(main)
topFrame.pack()
bottomFrame = Frame(main)
bottomFrame.pack(side=BOTTOM)
WelcomeLabel = Label(main, text='Welcome to group B2s Twitter Project, \nWhat would you like to search on twitter today?')
#WelcomeLabel.padx=1000
#WelcomeLabel.pady=2000
WelcomeLabel.pack(side=TOP, padx=100, pady=100)
Label(main, text='Search:').pack()
e1 = Entry(main)
e1.pack()
button1 = Button(bottomFrame, text='Confirm Selection', fg='blue')
button1.pack(side=BOTTOM)


main.mainloop()
