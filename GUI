#import all from tkinter
from tkinter import *

#organising
#create main window
main=Tk()
#main window title
main.title('Flying Unicorns Twitter Project')
#main window size
main.geometry("600x350")
#create top frame for window, inside main window
topFrame = Frame(main)
#pack automatically adjusts the frame
topFrame.pack()
#create bottom frame, inside main window
bottomFrame = Frame(main)
#pack bottom frame to bottom of main window
bottomFrame.pack(side=BOTTOM)
#create welcome label/text
WelcomeLabel = Label(main, text='Welcome to group Flying Unicorns Twitter Project, \nWhat would you like to search on twitter today?')
#pack it to top with 10 spaces above and below welcome label
WelcomeLabel.pack(side=TOP, padx=10, pady=10)
#text stating this is search option
Label(main, text='Search:').pack()
#create text box for user to enter search 
e1 = Entry(main)
#pack text box with 10 spaces above and below
e1.pack(padx=10, pady=10)
#confirm selection, sends user search 'e1' to API
button1 = Button(main, text='Confirm Selection', fg='blue')
button1.pack(padx=10, pady=10)
#information returned from API should display in listbox
listbox = Listbox(main, width = 50, height = 20)
listbox.pack(padx=10, pady=10)


main.mainloop()

